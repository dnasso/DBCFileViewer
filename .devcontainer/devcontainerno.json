{
  "name": "DBCFileViewer Dev",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "target": "base"
  },
  "remoteUser": "dbcuser",
  "workspaceFolder": "/workspaces/DBCFileViewer",

  "customizations": {
    "vscode": {
      "settings": {
        "cmake.generator": "Ninja",
        "cmake.installPrefix": "/workspaces/DBCFileViewer/install"
      },
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.cmake-tools",
        "twxs.cmake",
        "ms-vscode-remote.remote-containers"
      ]
    }
  },
  "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind"
  ],
  "containerEnv": {
    "QT_QPA_PLATFORM": "xcb;wayland",
    //"QT_DEBUG_PLUGINS": "1",
    //"QSG_RENDER_LOOP": "basic",
    "DISPLAY": "${localEnv:DISPLAY}"
  },
  "runArgs": [
    // Prevent Qt crashes
    "--shm-size=1g"
    //"--device=/dev/dri"
  ],
  "postCreateCommand": "cmake -S . -B build_docker -G Ninja -DCMAKE_BUILD_TYPE=RelWithDebInfo"
}
